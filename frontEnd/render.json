{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@render/static-build", 
      "config": {
        "distDir": "build"
      }
    }
  ],
  "routes": [
    {
      "src": "/*",  
      "dest": "/index.html", 
      "headers": {
        "Cache-Control": "no-cache" 
      }
    }
  ]
}